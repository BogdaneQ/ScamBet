@model ScamBet.Entities.User

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="username" class="control-label"></label>
        <select asp-for="username" class="form-control" asp-items="ViewBag.AccountList"></select>
    </div>
    <div class="form-group">
        <label asp-for="acc_balance" class="control-label"></label>
        <input asp-for="acc_balance" type="number" class="form-control" />
        <span asp-validation-for="acc_balance" class="text-danger"></span>
    </div>
    <!-- Add other fields here -->
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
