@model ScamBet.Entities.User

<form asp-action="Edit">
    <input type="hidden" asp-for="user_ID" />
    <div class="form-group">
        <label asp-for="username" class="control-label"></label>
        <input asp-for="username" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="acc_balance" class="control-label"></label>
        <input asp-for="acc_balance" type="number" class="form-control" />
        <span asp-validation-for="acc_balance" class="text-danger"></span>
    </div>
    <!-- Add other fields here -->
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
