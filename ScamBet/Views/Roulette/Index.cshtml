@model IEnumerable<ScamBet.Entities.Roulette>

<h2>Roulettes</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roulette in Model)
        {
            <tr>
                <td>@roulette.roulette_ID</td>
                <td>@roulette.name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@roulette.roulette_ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@roulette.roulette_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
