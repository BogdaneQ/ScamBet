@model IEnumerable<ScamBet.Entities.Roulette>

@{
    ViewData["Title"] = "Roulette List";
}

<h1>Roulette List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.roulette_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roulette in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => roulette.roulette_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => roulette.balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => roulette.time)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@roulette.roulette_ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@roulette.roulette_ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@roulette.roulette_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
