@model ScamBet.Entities.Roulette

@{
    ViewData["Title"] = "Play Roulette";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<h2>Roulette</h2>

<div class="roulette-container">
    <div id="roulette-table">
        <div class="sector green" data-value="0">0</div>
        <div class="sector red" data-value="1">1</div>
        <div class="sector black" data-value="2">2</div>
        <div class="sector red" data-value="3">3</div>
        <div class="sector black" data-value="4">4</div>
        <div class="sector red" data-value="5">5</div>
        <div class="sector black" data-value="6">6</div>
        <div class="sector red" data-value="7">7</div>
        <div class="sector black" data-value="8">8</div>
        <div class="sector red" data-value="9">9</div>
        <div class="sector black" data-value="10">10</div>
        <div class="sector black" data-value="11">11</div>
        <div class="sector red" data-value="12">12</div>
        <div class="sector black" data-value="13">13</div>
        <div class="sector red" data-value="14">14</div>
        <div class="sector black" data-value="15">15</div>
        <div class="sector red" data-value="16">16</div>
        <div class="sector black" data-value="17">17</div>
        <div class="sector red" data-value="18">18</div>
        <div class="sector red" data-value="19">19</div>
        <div class="sector black" data-value="20">20</div>
        <div class="sector red" data-value="21">21</div>
        <div class="sector black" data-value="22">22</div>
        <div class="sector red" data-value="23">23</div>
        <div class="sector black" data-value="24">24</div>
        <div class="sector red" data-value="25">25</div>
        <div class="sector black" data-value="26">26</div>
        <div class="sector red" data-value="27">27</div>
        <div class="sector black" data-value="28">28</div>
        <div class="sector black" data-value="29">29</div>
        <div class="sector red" data-value="30">30</div>
        <div class="sector black" data-value="31">31</div>
        <div class="sector red" data-value="32">32</div>
        <div class="sector black" data-value="33">33</div>
        <div class="sector red" data-value="34">34</div>
        <div class="sector black" data-value="35">35</div>
        <div class="sector red" data-value="36">36</div>

        <div class="sector-label" data-value="1-12">1st 12</div>
        <div class="sector-label" data-value="13-24">2nd 12</div>
        <div class="sector-label" data-value="25-36">3rd 12</div>

        <div class="sector-label" data-value="1-18">1-18</div>
        <div class="sector-label" data-value="even">EVEN</div>
        <div class="sector-label black" data-value="black">BLACK</div>
        <div class="sector-label red" data-value="red">RED</div>
        <div class="sector-label" data-value="odd">ODD</div>
        <div class="sector-label" data-value="19-36">19-36</div>

        <div class="sector-label" data-value="2to1-1">2 to 1</div>
        <div class="sector-label" data-value="2to1-2">2 to 1</div>
        <div class="sector-label" data-value="2to1-3">2 to 1</div>
    </div>




    <div class="result-info">
        <form id="betForm" method="post" asp-controller="Roulette" asp-action="PlaceBet">
            <input type="hidden" id="betType" name="betType" value="">
            <input type="hidden" id="betValue" name="betValue" value="">
            <div class="form-group">
                <label for="betAmount">Bet Amount</label>
                <input type="number" id="betAmount" name="betAmount" class="form-control" placeholder="Enter bet amount">
            </div>
            <button type="submit" class="btn btn-primary">Place Bet</button>
        </form>

        @if (ViewBag.RouletteResult != null)
        {
            <h3>Roulette Result: @ViewBag.RouletteResult</h3>
            <h3>@(ViewBag.IsWin ? "You won!" : "You lost!")</h3>
            <h3>Your winnings: @ViewBag.Winnings</h3>
            <h3>Your new balance: @ViewBag.Balance</h3>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.sector, .sector-label').forEach(sector => {
            sector.addEventListener('click', function () {
                document.getElementById('betType').value = this.classList.contains('sector-label') ? 'label' : 'number';
                document.getElementById('betValue').value = this.dataset.value;
                document.querySelectorAll('.selected').forEach(el => el.classList.remove('selected'));
                this.classList.add('selected');
            });
        });

        document.getElementById('betForm').addEventListener('submit', function (event) {
            if (!document.getElementById('betType').value || !document.getElementById('betValue').value) {
                alert('Please select a number before placing your bet.');
                event.preventDefault();
            }
        });

        @if (ViewBag.RouletteResult != null)
        {
            <text>
                        const result = "@ViewBag.RouletteResult".split(':')[0];
            const resultElement = document.querySelector(`[data-value="${result}"]`);
            if (resultElement) {
                resultElement.classList.add('flash');
                setTimeout(() => {
                    resultElement.classList.remove('flash');
                }, 6000);
            }
            </text>
        }
    </script>
}