@model ScamBet.Entities.Roulette

@{
    ViewData["Title"] = "Delete Roulette Bet";
}

<h2>Delete Roulette Bet</h2>

<h3>Are you sure you want to delete this bet?</h3>
<div>
    <h4>Roulette Bet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bet ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bet_ID_r)
        </dd>

        <dt class="col-sm-2">
            Bet Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.betType_r)
        </dd>

        <dt class="col-sm-2">
            Bet Value
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.betValue_r)
        </dd>

        <dt class="col-sm-2">
            Bet Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.betAmount_r)
        </dd>

        <dt class="col-sm-2">
            Bet Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.betTime_r)
        </dd>

        <dt class="col-sm-2">
            Win?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isWin_r)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="bet_ID_r" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
