@model ScamBet.Entitties.Match

@{
    ViewData["Title"] = "Create Match";
}

<h1>Create Match</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="trID">Team Results ID</label>
        <input asp-for="trID" class="form-control" />
        <span asp-validation-for="trID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="time">Match Time</label>
        <input asp-for="time" class="form-control" />
        <span asp-validation-for="time" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
