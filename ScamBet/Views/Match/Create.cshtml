@model ScamBet.Entities.Match

<h2>Create New Match</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="team1">Home Team</label>
        <select asp-for="team1_ID" class="form-control" asp-items="ViewBag.AllTeams"></select>
    </div>
    <div class="form-group">
        <label asp-for="team2">Away Team</label>
        <select asp-for="team2_ID" class="form-control" asp-items="ViewBag.AllTeams"></select>
    </div>
    <div class="form-group">
        <label asp-for="time">Date</label>
        <input asp-for="time" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="winner">Result</label>
        <input asp-for="winner" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
