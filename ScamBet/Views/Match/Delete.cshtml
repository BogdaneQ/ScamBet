@model ScamBet.Entities.Match

<h2>Delete Match</h2>

<div>
    <h4>Are you sure you want to delete this match?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.match_ID
        </dd>
        <dt class="col-sm-2">
            Home Team
        </dt>
        <dd class="col-sm-10">
            @Model.team1_ID
        </dd>
        <dt class="col-sm-2">
            Away Team
        </dt>
        <dd class="col-sm-10">
            @Model.team2_ID
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.time
        </dd>
        <dt class="col-sm-2">
            Result
        </dt>
        <dd class="col-sm-10">
            @Model.winner_ID
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="match_ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
