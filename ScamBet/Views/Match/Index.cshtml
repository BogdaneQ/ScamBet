@model IEnumerable<ScamBet.Entities.Match>

<h2>Matches</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Home Team</th>
            <th>Away Team</th>
            <th>Date</th>
            <th>Winner</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.match_ID</td>
                <td>@match.team1_ID</td>
                <td>@match.team2_ID</td>
                <td>@match.time</td>
                <td>@match.winner</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@match.match_ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@match.match_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
