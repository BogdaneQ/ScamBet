@model IEnumerable<ScamBet.Entities.Match>

@{
    ViewData["Title"] = "Index";
}

<h2>Matches</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.match_ID)
            </th>
            <th>
                Home Team
            </th>
            <th>
                Away Team
            </th>
            <th>
                Home Score
            </th>
            <th>
                Away Score
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
            <th>
                @Html.DisplayName("Winner")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.match_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team1.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team2.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.team1_goals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.team2_goals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.time)
                </td>
                <td>
                    @{
                        if (item.winner_ID == item.team1_ID)
                        {
                            <span>@item.team1_ID</span>
                        }
                        else if (item.winner_ID == item.team2_ID)
                        {
                            <span>@item.team2_ID</span>
                        }
                        else
                        {
                            <span>Draw</span>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.match_ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.match_ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.match_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
