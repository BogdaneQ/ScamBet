@model ScamBet.Entities.Team

<h2>Delete Team</h2>

<div>
    <h4>Are you sure you want to delete this team?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.team_ID
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
            Wins
        </dt>
        <dd class="col-sm-10">
            @Model.wins
        </dd>
        <dt class="col-sm-2">
            Draws
        </dt>
        <dd class="col-sm-10">
            @Model.draws
        </dd>
        <dt class="col-sm-2">
            Loses
        </dt>
        <dd class="col-sm-10">
            @Model.loses
        </dd>
        <dt class="col-sm-2">
            Points
        </dt>
        <dd class="col-sm-10">
            @Model.points
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="team_ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
