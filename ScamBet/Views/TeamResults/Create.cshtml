@model ScamBet.Entitties.Team_results

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TeamID" class="control-label"></label>
        <select asp-for="TeamID" class="form-control" asp-items="ViewBag.AllTeams"></select>
    </div>
    <div class="form-group">
        <label asp-for="winner" class="control-label"></label>
        <input asp-for="winner" type="checkbox" class="form-control" />
        <span asp-validation-for="winner" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="goals" class="control-label"></label>
        <input asp-for="goals" type="number" class="form-control" />
        <span asp-validation-for="goals" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="fouls" class="control-label"></label>
        <input asp-for="fouls" type="number" class="form-control" />
        <span asp-validation-for="fouls" class="text-danger"></span>
    </div>
    <!-- Add other fields here -->
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
