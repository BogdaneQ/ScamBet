<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScamBet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Include the updated CSS code here */
        body {
            background-color: #333; /* Dark background color */
            color: white;
        }

        nav {
            background-color: #eb0003; /* Light red background */
            padding: 1rem; /* Increase the padding for the navbar */
        }

        .nav-link, .navbar-brand {
            color: white !important;
            font-size: 1.5rem; /* Increase the font size of the nav links */
        }

        .navbar-brand {
            font-size: 40px; /* Increase the font size of the brand */
            text-shadow: 3px 3px 4px #000000;
        }

        .navbar-toggler {
            font-size: 1.5rem; /* Increase the size of the toggler icon */
        }

        /* Custom styles for dropdown menu */
        .dropdown-menu {
            background-color: #a00002; /* Darker red background for dropdown */
        }

        /* Highlight dropdown items on hover */
        .dropdown-item:hover {
            background-color: #ff3333; /* Lighter red on hover */
            color: white; /* White text on hover */
        }

        /* Move navbar items to the right by 50px */
        .move-to-right {
            margin-left: 40px;
        }
    
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div id="sessionTimer">Czas sesji: 15:00</div>
        <script>
            var sessionTimer = document.getElementById('sessionTimer');
            var sessionTimeInSeconds = 15 * 60;

            function updateSessionTimer() {
                var minutes = Math.floor(sessionTimeInSeconds / 60);
                var seconds = sessionTimeInSeconds % 60;
                sessionTimer.textContent = 'Czas sesji: ' + minutes.toString().padStart(2, '0') + ':' + seconds.toString().padStart(2, '0');

                sessionTimeInSeconds--;

                if (sessionTimeInSeconds < 0) {
                    window.location.href = '/Home/Login';
                }
            }

            setInterval(updateSessionTimer, 1000);
        </script>

        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><strong>ScamBet</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 move-to-right">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="AdminIndex">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Index">Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Team" asp-action="Index">Teams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Match" asp-action="Index">Match</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Roulette" asp-action="Index">Roulette</a>
                            </li>
                        }
                        else if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="UserIndex">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="MyAccount">My Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Roulette" asp-action="Play">Roulette</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav mr-auto justify-content-end">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="navbar-toggler-icon"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Log Out</a></li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
